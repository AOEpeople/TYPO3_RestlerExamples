{
  "name": "aoe/restler-examples",
  "type": "typo3-cms-extension",
  "description": "A TYPO3-Extension, which contains some examples, how to use/configure the restler-Framework (PHP REST-framework to create REST-API's, in TYPO3 via the TYPO3-Extension 'restler'",
  "authors": [
    {
      "name": "AOE GmbH",
      "email": "dev@aoe.com"
    }
  ],
  "license": "GPL-3.0",
  "require": {
    "php": "^7.2",
    "ext-json": "*",
    "aoe/restler": "^8.0",
    "typo3/cms-core": "^8.7"
  },
  "require-dev": {
    "nimut/testing-framework": "^5.2",
    "symfony/finder": "^2.3 || ^3.0 || ^4.0",
    "guzzlehttp/guzzle": "^6.5",
    "behat/behat": "^3.8",
    "bshaffer/oauth2-server-php": "v1.11.1",
    "justinrainbow/json-schema": "^5.2"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/AOEpeople/restler"
    }
  ],
  "autoload": {
    "psr-4": {
      "Aoe\\RestlerExamples\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aoe\\RestlerExamples\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/restler_examples ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/restler_examples"
    ],
    "test:functional": [
      "[ -e .Build/bin/phpunit ] || composer update",
      "TYPO3_PATH_WEB=$PWD/.Build/Web typo3DatabaseName=restler_examples typo3DatabaseHost=127.0.0.1 typo3DatabaseUsername=root typo3DatabasePassword=root .Build/bin/phpunit -c Tests/Functional/phpunit.xml"
    ],
    "test:behat": [
      "[ -e .Build/bin/behat ] || composer update",
      ".Build/bin/behat -c Tests/Behavior/behat.yml -p default"
    ],
    "extension-release": [
      "rm -rf .Build",
      "rm -rf Tests/",
      "rm .gitignore",
      "rm .scrutinizer.yml"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "8.1.0-dev"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web",
      "extension-key": "restler_examples"
    }
  },
  "keywords": [
    "TYPO3",
    "Restler",
    "REST",
    "API"
  ]
}

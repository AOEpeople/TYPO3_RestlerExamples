{
  "name": "aoe/restler-examples",
  "type": "typo3-cms-extension",
  "description": "A TYPO3-Extension, which contains some examples, how to use/configure the restler-Framework (PHP REST-framework to create REST-API's, in TYPO3 via the TYPO3-Extension 'restler'",
  "authors": [
    {
      "name": "AOE GmbH",
      "email": "dev@aoe.com"
    }
  ],
  "require": {
    "aoe/restler": "~3.1",
    "typo3/cms-core": ">=7.6.0, <=8.7.99"
  },
  "require-dev": {
    "nimut/testing-framework": "~3.0",
    "symfony/finder": "~2.3 || ~3.0 || ~4.0",
    "guzzlehttp/guzzle": "^6.2",
    "behat/behat": "3.4.*",
    "bshaffer/oauth2-server-php": "v1.11.1",
    "justinrainbow/json-schema": "5.2.*"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/AOEpeople/restler"
    }
  ],
  "autoload": {
    "psr-4": {
      "Aoe\\RestlerExamples\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aoe\\RestlerExamples\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
    }
  },
  "replace": {
    "restler_examples": "*"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/restler_examples ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/restler_examples"
    ],
    "test:functional": [
      "[ -e .Build/bin/phpunit ] || composer update",
      "TYPO3_PATH_ROOT=.Build/Web .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml Tests/Functional"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.1.1-dev"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  },
  "keywords": [
    "TYPO3",
    "Restler",
    "REST",
    "API"
  ]
}
